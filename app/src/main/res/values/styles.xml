<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TransparentTheme" parent="AppTheme">
        <item name="colorPrimaryDark">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Translucent</item>
    </style>

    <style name="ActivityAnimTheme" parent="TransparentTheme">
        <item name="android:windowAnimationStyle">@style/ActivityAnim</item>
    </style>

    <!--初步设置activity进入和退出的动画-->
    <style name="ActivityAnim" parent="android:Animation.Activity">
        <item name="android:activityCloseExitAnimation">@anim/activity_finish</item>
        <item name="android:activityCloseEnterAnimation">@anim/activity_finish</item>
        <item name="android:activityOpenExitAnimation">@anim/activity_start</item>
        <item name="android:activityOpenEnterAnimation">@anim/activity_start</item>
        <item name="android:taskOpenEnterAnimation">@anim/activity_start</item>
        <item name="android:taskOpenExitAnimation">@anim/activity_start</item>
        <item name="android:taskCloseEnterAnimation">@anim/activity_finish</item>
        <item name="android:taskCloseExitAnimation">@anim/activity_finish</item>
        <item name="android:taskToFrontEnterAnimation">@anim/activity_start</item>
        <item name="android:taskToFrontExitAnimation">@anim/activity_start</item>
        <item name="android:taskToBackEnterAnimation">@anim/activity_finish</item>
        <item name="android:taskToBackExitAnimation">@anim/activity_finish</item>
        <item name="android:windowEnterAnimation">@anim/activity_start</item>
        <item name="android:windowExitAnimation">@anim/activity_finish</item>
    </style>

</resources>
